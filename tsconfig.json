{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "lib": ["es2017", "dom"],
    "outDir": "./",
    "moduleResolution": "node",
    "baseUrl": "src", // This must be specified if "paths" is.
    "paths": {
      "../*": ["node_modules/*"],
      "@polymer": ["node_modules/@polymer"],
      "lit-html": ["node_modules/lit-html"]
    },
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": []
}
